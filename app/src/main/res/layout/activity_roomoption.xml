<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방제목 : " />

        <EditText
            android:id="@+id/room_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/room_title"
            android:singleLine="true"
            android:maxLength="20"
            android:editable="true"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/room_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="암   호 : " />

        <EditText
            android:id="@+id/password_title_text"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_alignBaseline="@id/room_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="true"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/max_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최대 인원 : " />

        <Spinner
            android:id="@+id/spinner_maxPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적용"
            android:onClick="onApplyClicked"
            android:nestedScrollingEnabled="false" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:onClick="onCancelClicked"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
</LinearLayout>
